<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'books/info',user:current_user%>
      <h2 class="mt-3">New book</h2>
      <%= form_with model:@book_new, local:true do |f| %>
        <div class="form-group">
          <label for="book_title">Title</label>
        </div>
        <%= f.text_field :title %>
        <div class="form-group">
          <label for="book_option">Option</label>
        </div>
        <%= f.text_area :body %>
        <div class="form-group">
          <%= f.submit 'Create Book', class:"btn btn-success" %>
        </div>
      <% end %>

    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class="table">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
          <tr>
            <td><%= attachment_image_tag user, :profile_image, :fill, 60, 60, fallback:"no_image.jpeg", size:'60x60' %></td>
            <td><%= user.name %></td>
            <td><%= link_to " Show", user_path(user.id) %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>