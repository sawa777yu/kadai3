    <!--current_userとはuserテーブルの中のログイン中のユーザーのidを指す-->
  <table class="table">
    <tbody>
      <tr></tr>
      <tr>
        <th>name</th>
      	<th><%= current_user.name %></th>
      </tr>
      <tr>
  	    <th>introduction</th>
    	  <th><%= current_user.introduction %></th>
      </tr>
    </tbody>
  </table>
  <div class="row">
    <%= link_to "", edit_path(current_user.id), class: "btn btn-outline-secondary btn-block fas fa-user-cog edit_user_id" %>
