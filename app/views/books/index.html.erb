<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
        <%= attachment_image_tag current_user, :profile_image, :fill, 60, 60, fallback:"no_image.jpeg" %>
        <!--current_userとはuserテーブルの中のログイン中のユーザーのidを指す-->
      <table class="table">
        <tbody>
          <tr></tr>
          <tr>
            <th>name</th>
          	<th><%= current_user.name %></th>
          </tr>
          <tr>
      	    <th>introduction</th>
        	  <th><%= current_user.introduction %></th>
          </tr>
        </tbody>
      </table>

    <div class="row">
        <%= link_to "", edit_path(current_user.id), class: "btn btn-outline-secondary btn-block fas fa-user-cog edit_user_id" %>
    </div>
    <h2 class="mt-3">New book</h2>
      <%= form_with model:@book, local:true do |f| %>
        <div class="form-group">
          <label for="book_title">Title</label>
        </div>
        <%= f.text_field :title %>
        <div class="form-group">
          <label for="book_option">Option</label>
        </div>
        <%= f.text_area :body %>
        <div class="form-group">
          <%= f.submit 'Create Book', class:"btn btn-success" %>
          <!--createした後のながれについて-->
          <!--indexアクション内で定義された@bookはBookモデルに空のデータを作成する。-->
          <!--一連のフォームからデータを入力された@bookに対してcreateアクションが実行される-->
          <!---->
        </div>
      <% end %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td>
                <%= link_to user_path(current_user) do %>
                  <%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, fallback:"no_image.jpeg" %>
                  <!--book.userとはブロック変数book=@booksの中身なのでBook.allの中のuser_idカラム-->
                <% end %>
              </td>
              <td>
                <%= link_to book_path(book.id) do %>
                  <%= book.title %>
                <% end %>
              </td>
              <td>
                <%= book.body %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>